<div class="container">
    <form action="/post/update/<%= @post.id %>" method="post">
      <div class="form-group">
        <label for="example_title">제 목</label>
        <input name="input_title" value="<%= @post.title %>" type="text" class="form-control" id="example_title" placeholder="제목">
      </div>
      
      <div class="form-group">
        <label for="example_content">내 용</label>
        <textarea name="input_content" class="form-control" id="example_content" rows="10" placeholder="내용"><%= @post.content %></textarea>
      </div>
      
      <button type="submit" class="btn btn-secondary">수 정</button>
    </form>
</div>